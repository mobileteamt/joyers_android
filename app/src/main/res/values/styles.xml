<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogSlideAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textFontWeight">@integer/semiBold</item>
    </style>

    <style name="TextSemiBold" parent="Widget.AppCompat.TextView">
        <item name="textAllCaps">false</item>
       <item name="fontFamily">@font/lato_semi_bold</item>
    </style>


    <style name="TextBold" parent="Widget.AppCompat.TextView">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>


    <style name="Widget.Theme.Joyers.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Joyers.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="CircleImageStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>



</resources>