<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Joyers" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="fontFamily">@font/my_font_family</item>
        <item name="android:fontFamily">@font/my_font_family</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:statusBarColor">#FFFFFF</item>
        <!-- Dark icons in the status bar -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Optional background for app window -->
        <item name="android:windowBackground">#FFFFFF</item>

    </style>

    <style name="Theme.Joyers" parent="Base.Theme.Joyers" />

    <style name="latRegularFontStyle" parent="@android:style/TextAppearance.Small">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="latoBoldFontStyle" parent="@android:style/TextAppearance.Small">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="latoSemiBoldFontStyle" parent="@android:style/TextAppearance.Small">
        <item name="fontFamily">@font/lato_semi_bold</item>
        <item name="android:fontFamily">@font/lato_semi_bold</item>
    </style>

    <style name="pacificoBoldFontStyle" parent="@android:style/TextAppearance.Small">
        <item name="fontFamily">@font/pacifico_regular</item>
        <item name="android:fontFamily">@font/pacifico_regular</item>
    </style>

    <style name="TabStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/tab_default</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>



</resources>